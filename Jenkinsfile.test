#!/usr/bin/env groovy

/**
 * Declarative Jenkinsfile
 */
 pipeline {
    agent {
        docker {
            image 'python:2.7.15'
            label 'ui-systest'
            args  '-v /dev/log:/dev/log'
        }
    }
    stages {
        stage('Clone Repo') {
            steps {
                checkout scm
            }
        }
        stage('Install Dependencies') {
            steps {
                withEnv(["HOME=${env.WORKSPACE}"]) {
                    sh 'pip install virtualenv'
                }
            }
        }
        stage('Run Tests') {
            steps {
                withEnv(["HOME=${env.WORKSPACE}"]) {
                    sh """
                    virtualenv pyenv
                   . pyenv/bin/activate
                    pip install -r requirements.txt
                    make tests
                    """
                }
            }
        }
    }
}
