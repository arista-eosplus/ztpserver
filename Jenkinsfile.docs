#!/usr/bin/env groovy

/**
 * Declarative Jenkinsfile
 */
 pipeline {
    agent { label 'ui-systest' }
    stages {
        stage('Clone') {
            steps {
                checkout scm
            }
        }
        stage('Docker') {
            agent {
                docker {
                    image 'python:2.7.15'
                    label 'ui-systest'
                }
            }
            steps {
                withEnv(["HOME=${env.WORKSPACE}"]) {
                    sh 'make clean'
                }
                withEnv(["HOME=${env.WORKSPACE}/docs"]) {
                    sh 'pip install --user -r requirements.txt'
                    sh 'make docs'
                }
            }
        }
    }
}
